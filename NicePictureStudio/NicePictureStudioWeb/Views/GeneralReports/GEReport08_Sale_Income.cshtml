@model IEnumerable<NicePictureStudio.Models.BarChartViewModel>
<div class="chart-wrapper">
    @(Html.Kendo().Chart(Model)
            .Name("GEReport08")
                    .Title("รายงานจัดอันดับรายได้จาแนกตามช่วงเวลาและผู้ขาย")
            .Legend(legend => legend
                .Visible(false)
            )
            .ChartArea(chartArea => chartArea
                .Background("transparent")
            )
            .Series(series =>
            {

                series.Column(
                    model => model.Data_1
                    ).Name("รายได้ PreWedding");
                series.Column(
                    model => model.Data_Group1_1
                    ).Name("รายได้ Engagement");
                series.Column(
                    model => model.Data_Group2_1
                    ).Name("รายได้ Wedding");
            })
            .CategoryAxis(axis => axis
                .Categories(model => model.Catalogs)
                .MajorGridLines(lines => lines.Visible(true))
               .Labels(labels => labels.Rotation(-25))
            )
            .ValueAxis(axis => axis
                .Numeric()
                .Max(4000000)
                .Line(line => line.Visible(false))
                .MajorGridLines(lines => lines.Visible(true))
            )
            .Tooltip(tooltip => tooltip
                .Visible(true)
                .Template("#= series.name #: #= value # บาท")
            )
    )
</div>

