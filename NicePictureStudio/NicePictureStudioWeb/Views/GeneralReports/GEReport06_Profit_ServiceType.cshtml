@model IEnumerable<NicePictureStudio.Models.BarChartViewModel>
<div class="chart-wrapper">
    @(Html.Kendo().Chart(Model)
        .Name("GEReport06")
        .Title("รายงานสรุปเปรียบเทียบกาไรขั้นต้นกับรายได้ตามช่วงเวลาตามแต่ละรูปแบบของการให้บริการ")
        .Legend(legend => legend
            .Position(ChartLegendPosition.Top)
        )
        .ChartArea(chartArea => chartArea
            .Background("transparent")
        )
        .Series(series =>
        {
            series.Column(
                    model => model.Data_1
                    ).Name("รายได้ - PreWedding");
            series.Column(
                    model => model.Data_2
                    ).Name("กำไร - PreWedding");
            series.Column(
                    model => model.Data_Group1_1
                    ).Name("รายได้ - Engagement");
            series.Column(
                    model => model.Data_Group1_2
                    ).Name("กำไร - Engagement");
            series.Column(
                  model => model.Data_Group2_1
                  ).Name("รายได้ - Wedding");
            series.Column(
                    model => model.Data_Group2_2
                    ).Name("กำไร - Wedding");

        })
        .CategoryAxis(axis => axis
            .Name("series-axis")
            .Line(line => line.Visible(false))
        )
        .CategoryAxis(axis => axis
            .Name("label-axis")
            .Categories(model => model.Catalogs)
        )
        .ValueAxis(axis => axis
            .Numeric()
                .Labels(labels => labels.Format("{0:###,###} บาท"))

                // Move the label-axis all the way down the value axis
                .AxisCrossingValue(0, int.MinValue)
        )
        .Tooltip(tooltip => tooltip
            .Visible(true)
            .Format("{0:###,###}")
            .Template("#= series.name #: #= kendo.toString(value,'\\#\\#,\\# บาท') #")
        )
    )
</div>
