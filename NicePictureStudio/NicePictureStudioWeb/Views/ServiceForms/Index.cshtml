@model IEnumerable<NicePictureStudio.App_Data.ServiceForm>

@{
    ViewBag.Title = "ตารางงานทั้งหมด";
}
<script type="text/javascript">
    kendo.culture("th-TH");
    $(document).ready(function () {
        $("#statusId").on("change", function () {
            if ($("#statusId").val() >1)
            {
                $("#isConfirm").attr("disabled", "disabled");
                $("#isNotFinish").attr("disabled", "disabled");
                $("#lblIsConfirm").css("color", "#d2cdcd");
                $("#lblIsNotFinish").css("color", "#d2cdcd");
                $("#isNotFinish").attr("checked", false);
            }
            else if ($("#statusId").val() <= 1)
            {
                $("#isConfirm").attr("disabled", null);
                $("#isNotFinish").attr("disabled", null);
                $("#lblIsConfirm").css("color", "");
                $("#lblIsNotFinish").css("color", "");
            }
        });

        $("#ClearResult").on("click", function () {
            $("#isConfirm").attr("disabled", null);
            $("#isNotFinish").attr("disabled", null);
            $("#lblIsConfirm").css("color", "");
            $("#lblIsNotFinish").css("color", "");
        });

    }); 

    function modelOpen() {
        var serviceIndex = $(".IdServiceForm").val();
        $.ajax({
            url: '@Url.Action("DetailsServiceForm", "ServiceForms")',
            data: { ServiceFormScheduleId: serviceIndex },
            type: "POST",
            success: function (data) {
                $(".nccontainer").html(data);
                $(".ncmodal").modal('toggle');
                //$(".k-scheduler-cancel").click();
                //$("#ServiceInformation").html(data);
            }
        });
    }
</script>

