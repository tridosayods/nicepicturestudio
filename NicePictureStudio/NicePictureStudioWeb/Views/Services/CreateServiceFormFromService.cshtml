@model NicePictureStudio.App_Data.ServiceForm

<script type="text/javascript">
    $(document).ready(function () {
        $('#@ViewBag.HTMLModalPhotoGraph').click(function () {
            var url = $('#@ViewBag.HTMLTagButtonPhotoGraph').data('url');
            $.get(url, { id: null, serviceType: $('#@ViewBag.HTMLTagButtonPhotoGraph').data('servicetype') }, function (data) {
                $('#@ViewBag.HTMLContainerButtonPhotoGraph').html(data);
                $('#@ViewBag.HTMLTagButtonPhotoGraph').modal('show');
            });
        });

        $('#@ViewBag.HTMLModalEquipment').click(function () {
            var url = $('#@ViewBag.HTMLTagButtonEquipment').data('url');
            $.get(url, { id: null, serviceType: $('#@ViewBag.HTMLTagButtonEquipment').data('servicetype') }, function (data) {
                $('#@ViewBag.HTMLContainerButtonEquipment').html(data);
                $('#@ViewBag.HTMLTagButtonEquipment').modal('show');
            });
        });

        $('#@ViewBag.HTMLModalLocation').click(function () {
            var url = $('#@ViewBag.HTMLTagButtonLocation').data('url');
            $.get(url, { id: null, serviceType: $('#@ViewBag.HTMLTagButtonLocation').data('servicetype') }, function (data) {
                $('#@ViewBag.HTMLContainerButtonLocation').html(data);
                $('#@ViewBag.HTMLTagButtonLocation').modal('show');
            });
        });

        $('#@ViewBag.HTMLModalOutsource').click(function () {
            var url = $('#@ViewBag.HTMLTagButtonOutsource').data('url');
            $.get(url, { id: null, serviceType: $('#@ViewBag.HTMLTagButtonOutsource').data('servicetype') }, function (data) {
                $('#@ViewBag.HTMLContainerButtonOutsource').html(data);
                $('#@ViewBag.HTMLTagButtonOutsource').modal('show');
            });
        });

        $('#@ViewBag.HTMLModalOutput').click(function () {
            var url = $('#@ViewBag.HTMLTagButtonOutput').data('url');
            $.get(url, { id: null, serviceType: $('#@ViewBag.HTMLTagButtonOutput').data('servicetype') }, function (data) {
                $('#@ViewBag.HTMLContainerButtonOutput').html(data);
                $('#@ViewBag.HTMLTagButtonOutput').modal('show');
            });
        });

        $(function () {
            $('#@ViewBag.ServiceTypeDatePickerStart').datetimepicker();
        });

        $(function () {
            $('#@ViewBag.ServiceTypeDatePickerEnd').datetimepicker();
        });

        @*$("#@ViewBag.HTMLButtonDisabledForm").click(function () {
            $(".@ViewBag.ServiceTypeItem").attr("disabled","");
        });*@

        $("#@ViewBag.HTMLButtonEnabledForm").click(function () {
            $(".@ViewBag.ServiceTypeItem").removeAttr("disabled");
        });
    });

    function DisableItem()
    {
        $(".@ViewBag.ServiceTypeItem").attr("disabled", "");
    }

</script>

