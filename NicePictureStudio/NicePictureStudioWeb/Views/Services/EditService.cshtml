@model NicePictureStudio.App_Data.Service

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnCancelService").on("click", function () {
            event.preventDefault();
            var _id = '@Model.Id';
            var url = '@Url.Action("DetailsService", "Services")';
            $.ajax({
                url: url,
                data: { Id: _id },
                type: "GET",
                success: function (data) { $("#MainSection").replaceWith(data); }
            })
        });
    });
</script>

