
@if (ViewBag.ModifyEquipment != null)
{
    <div class="form-group">
        <table class="table table-striped">
            <tr><th>Equipment Name</th><th>Equipment Description</th><th>Price</th><th>Action</th></tr>
            @foreach (NicePictureStudio.Models.EquipmentServiceViewModel item in ViewBag.ModifyEquipment)
            {
                <tr><td>@item.Name</td><td>@item.Description</td><td>@item.Price</td><td>@Ajax.ActionLink("Remove", "RemoveEquipmentWhenEdit", new { Id = @item.Id, serviceType = @ViewBag.EquipmentServiceType }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace })</td></tr>
            }
        </table>
    </div>
}

