<div id="tblServiceFormSummary">
   
    <input type="hidden" id="ServiceID" name="ServiceID" value="@ViewBag.ServiceIdSelected" />
    @if (@ViewBag.ServicesListSummary != null)
    {
        <table class="table table-bordered">
            <tr>
                <th>ประเภทการให้บริการ</th>
                <th>เวลาเริ่มต้นให้บริการ</th>
                <th>เวลาสิ้นสุดการให้บริการ</th>
                <th>ราคา</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (NicePictureStudio.App_Data.ServiceForm item in @ViewBag.ServicesListSummary)
            {
                <tr>
                    <td>@item.ServiceType.ServiceTypeName</td>
                    <td>@item.EventStart</td>
                    <td>@item.EventEnd</td>
                    <td>@item.ServicePrice.Value.ToString("#,#0.00") บาท</td>
                    <td><button onclick="OpenServiceDialog(@item.Id)" type="button" class="btn-default" value="Details"><span class="glyphicon glyphicon-edit"></span>แก้ไข</button></td>
                    <td><button onclick="DeleteServiceDialog(@item.Id)" type="button" class="btn btn-default" value="DeleteITem"><span class="glyphicon-remove-sign"></span>ยกเลิก</button></td>
                </tr>
            }
        </table>
     <hr />
    }

</div>

<script type="text/javascript">
    function OpenServiceDialog(id) {
        //alert(id);
        var url = '@Url.Action("ServicesNavigationOverallWhenEdit", "Services")';
        var data = { id : id };
        $.get(url, data, function (data) {
            $("#NavPatternBody").html(data);
            $("#NavPattern").modal('show');
        });
    }

    function DeleteServiceDialog(id) {
        //alert(id);
        var url = '@Url.Action("DeleteServiceFrom", "Services")';
        var data = { serviceFormId: id };
        $.get(url, data, function (data) {
            $("#tblServiceFormSummary").html(data);
        });
    }

</script>

