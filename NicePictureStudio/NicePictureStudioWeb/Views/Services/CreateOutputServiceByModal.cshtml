            </td>
            <td class="col-sm-5">
                <!-- Picture Slide for each group-->
                <h4>&nbsp;</h4>
                <br />
                <div class="container container-fluid" style="width:350px;height:450px;">
                    <div id="carousel-photo-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-photo-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-photo-generic" data-slide-to="1"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="@Url.Content("~/Content/images/Output/Output/PhotoBook1.jpg")" alt="Happy Together Forever">
                                <div class="carousel-caption">
                                    รูปสวยโฟโต้
                                </div>
                            </div>
                            <div class="item">
                                <img src="@Url.Content("~/Content/images/Output/Output/PhotoBook2.jpg")" alt="">
                                <div class="carousel-caption">

                                </div>
                            </div>

                        </div>

                    <hr />

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-photo-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-photo-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
               </div>
                 <!---->
            </td>
        </tr>
    </table>
        <hr />
    <div id="tblOutput">
        @if (@ViewBag.ListOutputServices != null)
        {
            <div class="form-group">
                <table class="table table-striped">
                    <tr><th>ชื่อ</th><th>รายละเอียด</th><th>จำนวนชุด</th><th>ราคา</th><th></th></tr>
                    @foreach (NicePictureStudio.Models.OutputServiceViewModel item in ViewBag.ListOutputServices)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.OutputQuantity</td>
                            <td>@item.Price.Value.ToString("#,#0.00 บาท")</td>
                            <td>@Ajax.ActionLink("Remove", "RemoveOutput", new { Id = @item.Id, serviceType = @ViewData["ServiceType"].ToString() }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "tblOutput" })</td>
                        </tr>
                    }
                </table>
            </div>
            <hr />
        }
    </div>
        
    @using (Ajax.BeginForm("ThirdFilterLocationService", "Services", new AjaxOptions
        {
            HttpMethod = "GET",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "ServiceSelection",
            OnBegin = "ValidateSummary"
        }))
    {
        @Html.AntiForgeryToken()
         <input type="hidden" id="ServiceType" name="ServiceType" value="@ViewData["ServiceType"]" /> 
        <ul class="pager">
         <li class="next">
             <div class="col-md-6 text-left">
                 <button type="button" id="btnBackStepToPhotoGraph" value="Back to Previous step"><span class="glyphicon glyphicon-step-backward"></span>ย้อนกลับไปหน้าแรก</button>
             </div>
        </li>
            <li class="previous">
               
                <div class="col-md-6 text-right">
                    <button type="submit" id="btnNextStepToLocation" value="Next"><span class="glyphicon glyphicon-step-forward"></span>ถัดไป</button>
                </div>
            </li>
        </ul>
       
      
    }
</div>







