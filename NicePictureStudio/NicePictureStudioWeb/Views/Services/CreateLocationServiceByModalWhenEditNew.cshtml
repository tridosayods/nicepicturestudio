@model NicePictureStudio.App_Data.LocationService

<script type="text/javascript">
    $(document).ready(function () {
        $("#btnBackStepToOutput").on("click", function () {
            event.preventDefault();
            var url = '@Url.Action("SecondFilterOutputServiceWhenEditNew", "Services")';
            $.ajax({
                url: url,
                data: { id: $("#page2Id").val(), serviceType: '@ViewData["ServiceType"]',IsEditTable : '@ViewBag.IsEditTable' },
                type: "GET",
                success: function (data) { $("#ServiceSelection").replaceWith(data); }
            })
        });
    });

    function ValidateSummary()
    {
        $("#page3Id").val($("#Code").val());
    }

    $("#OverNightPeriod").kendoNumericTextBox().attr("disabled", "disabled");
    $("#OverNightPeriod").kendoNumericTextBox({
        format: "d",
        decimals: 0
    });
    $("#OverNightPeriod").data("kendoNumericTextBox").wrapper.width("100px");
    $("#OverNightPeriod").data("kendoNumericTextBox").wrapper.attr("disabled", "disabled");


    $(function () {
        var locationId = $("#LocationFormId").val();

        if (locationId != "") {
            $("#LocationSelectSearch").attr("disabled", "disabled");
            $("#LocationServiceType").attr("disabled", "disabled");
            $("#btnSelectedLocation").attr("disabled", "disabled");
            $("#lblLocationSelectInfo").removeClass("hidden");
            $("#lblLocationSelectInfoFooter").removeClass("hidden");
        }
        else {
            $("#LocationSelectSearch").attr("disabled", null);
            $("#LocationServiceType").attr("disabled", null);
            //$("#btnSelectedLocation").attr("disabled", null);
            $("#lblLocationSelectInfo").addClass("hidden");
            $("#lblLocationSelectInfoFooter").addClass("hidden");
            if (('@ViewBag.ListLocationServices' != null) && ('@ViewBag.ListLocationServices' != "")) {

                $("#btnSelectedLocation").attr("disabled", "disabled");
            }
            else {

                $("#btnSelectedLocation").attr("disabled", null);
            }
        }

    });

    function ChooseLocation() {
        $("#btnSelectedLocation").attr("disabled", "disabled");
    }

    function RemoveLocation() {
        $("#btnSelectedLocation").attr("disabled", null);
    }

</script>

