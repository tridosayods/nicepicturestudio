@if (@ViewBag.ListLocationServices != null)
{
    <div class="form-group">
        <table class="table table-striped">
            <tr><th>Location Name</th><th>Description</th><th>OverNight</th><th>OverNightPeriod</th><th>Price</th></tr>
            @foreach (NicePictureStudio.Models.LocationServiceViewModel item in ViewBag.ListLocationServices)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    @if (@item.IsOverNight)
                    {
                        <td>Yes</td>
                        <td>@item.OverNightPeriod</td>}
                    else
                    {
                    <td>No</td>
                    <td>-</td> }
                    <td>@item.Price</td>
                </tr>
            }
        </table>
    </div>
}
