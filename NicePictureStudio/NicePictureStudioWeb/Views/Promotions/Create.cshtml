    $(document).ready(function () {
        $("#btnCalculatePromotion").on("click", function () {
            var url = '@Url.Action("SimpleCalculatePromotion", "Promotions")';
            $.ajax({
                url: url,
                data: {
                    PhotoGraphDiscount: $("#PhotoGraphDiscount").val(),
                    EquipmentDiscount: $("#EquipmentDiscount").val(),
                    LocationDiscount: $("#LocationDiscount").val(),
                    OutputDiscount: $("#OutputDiscount").val(),
                    OutsourceDiscount: $("#OutsourceDiscount").val()
                },
                type: "POST",
                success: function (data) { $("#CalculatorPromotion").replaceWith(data); }
            })
        });
    });
